.container {
  display: flex;
  height: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #fff;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}

.container,
input
 {
  font: 30rpx "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", Arial, sans-serif;
}

.timer_main {
  position: relative;
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  margin-top: -90rpx;
  text-align: center;
  background-color: #fff;
  transition: all .5s;
  z-index: 1;
}

.timer_time-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  transition: all .3s;
}

.timer_progress {
  position: absolute;
  top: 0;
  width: 150px;
  height: 300rpx;
  overflow: hidden;
  transition: all .3s;
}

.timer_progress_mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border: 6rpx solid #ffa07a;
  opacity: 1;
  border-radius: 100%;
}

.timer_left {
  left: 0;
}

.timer_right {
  right: 0;
}

.timer_circle {
  position: absolute;
  top: 0;
  width: 300rpx;
  height: 300rpx;
  border: 3px solid transparent;
  border-radius: 100%;
  transition: all .3s;
}


.timer_time {
  font-size: 80rpx;
  color: #ffa07a;
  font-weight: lighter;
  transition: font-size .3s;
}

.timer_taskName {
  position: absolute;
  top: -100px;
  font-size: 28rpx;
  letter-spacing: 10rpx;
  color: #fff;
}

.timer_done {
  width: 128rpx;
  height: 128rpx;
}

.timer_inputname {
  display: flex;
  justify-content:center;
  position: absolute;
  bottom: 250rpx;
  width: 80%;
  text-align: center;
  height: 80rpx;
  padding-left: 10rpx;
  border-bottom: 2rpx solid #f2f2f2;
  color: #999;
  margin-left:8.9%;
}

.timer_footer {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding-top: 80rpx;
  transition: all .3s;
}

.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  width: 160rpx;
  height: 80rpx;
  margin: 0 40rpx;
  border-radius: 40rpx;
  transition: all .7s;
  background-color: #ffa07a;
}

/*runing style*/

.timer--runing .timer_main {
  flex: 1;
}

.timer--runing .timer_time {
  font-size: 90rpx;
}

.timer--runing .timer_time-wrap {
  width: 400rpx;
  height: 400rpx;
}

.timer--runing .timer_progress {
  width: 200rpx;
  height: 400rpx;
}

.timer--runing .timer_circle {
  width: 400rpx;
  height: 400rpx;
}

.timer--runing .timer_footer {
  flex: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 10;
}

.timer--runing .timer_ctrl {
  background-color: #ffa07a;
  height: 60rpx;
  margin-bottom: 420rpx;
  border: 2rpx dashed #dedede;
  border-radius: 40rpx;
}

.hide {
  display: none!important;
}

.config {
  position: absolute;
  bottom: 100rpx;
  width: 100%;
  /* text-align: center; */
  height: 80rpx;
}

.config_text {
  font-size: 30rpx;
  color: #999;
  margin-left: 40rpx;
}